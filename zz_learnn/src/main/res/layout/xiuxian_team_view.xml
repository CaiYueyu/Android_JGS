<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left_team_lay"
        android:layout_width="92dp"
        android:layout_height="392dp"
        android:layout_marginTop="96dp"
        android:background="#80000000"
        android:clipChildren="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/left_team_name_tv"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:text="一路向北"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/left_user_flow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:constraint_referenced_ids="left_user1,left_user2,left_user3,left_user4,left_user5"
            app:flow_verticalGap="8dp"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/left_user1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#ff0000"
            app:round="100dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/left_user2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#00ff00"
            app:round="100dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/left_user3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#ff00ff"
            app:round="100dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/left_user4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#ffff00"
            app:round="100dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/left_user5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#0f0f0f"
            app:round="100dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/right_team_lay"
        android:layout_width="92dp"
        android:layout_height="392dp"
        android:layout_marginTop="96dp"
        android:clipChildren="false"
        android:background="#80000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/right_team_name_tv"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:text="一路向北"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/right_user_flow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:constraint_referenced_ids="right_user1,right_user2,right_user3,right_user4,right_user5"
            app:flow_verticalGap="8dp"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/right_user1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#ff0000"
            app:round="100dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/right_user2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#00ff00"
            app:round="100dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/right_user3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#ff00ff"
            app:round="100dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/right_user4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#ffff00"
            app:round="100dp" />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/right_user5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#0f0f0f"
            app:round="100dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>